<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--
    ==================================
    Cuentas Bancarias
    ==================================
    -->
        <record id="view_res_accounting_bank_form" model="ir.ui.view">
            <field name="name">res.accounting.bank.form</field>
            <field name="model">res.bank</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/field[@name='email']" position="after">
                    <separator string="Accounting Settings"/>
                    <field name="bank_id" string="Banco"/>  
                    <field name="bank_account_id" string="Cuenta Contable Bancaria"/>
                    <field name="journal_id" string="Diario de Cuenta Bancaria"/>
                    <field name="agencia" string="Agencia Bancaria"/>
                    <field name="trans_account_id"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
