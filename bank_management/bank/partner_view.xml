<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--
    ==================================
    Cuentas Bancarias
    ==================================
    -->
        <record id="view_partner_bank_account_form" model="ir.ui.view">
            <field name="name">res.partner.bank.inhe.account.form</field>
            <field name="model">res.partner.bank</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_bank_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/field[@name='name']" position="after">
                    <separator string="Account Properties" colspan="4"/>
                    <field name="bank_account_id"/>
                    <field name="trans_account_id"/>
                    <field name="journal_id"/>
                    <field name="transitory_money"/>
                    <field name="virtual_balance"/>
                    <field name="balance"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_partner_bank_account_tree" model="ir.ui.view">
            <field name="name">res.partner.bank.inhe.account.tree</field>
            <field name="model">res.partner.bank</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="base.view_partner_bank_tree"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='owner_name']" position="after">
                    <field name="bank"/>
                    <field name="bank_account_id"/>
                    <field name="journal_id"/>
                    <field name="trans_account_id"/>
                    <field name="transitory_money"/>
                    <field name="virtual_balance"/>
                    <field name="balance"/>
                </xpath>
            </field>
        </record>


        <record id="view_res_partner_bank_filter" model="ir.ui.view">
            <field name="name">res.partner.bank.search</field>
            <field name="model">res.partner.bank</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Account Bank">
                    <group col="5" colspan="4">
                    <field name="bank"/>
                    <field name="acc_number"/>
                    <field name="partner_id"/>
                    <field name="owner_name"/>
                    <field name="journal_id"/>
                    </group>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Bank" icon="terp-folder-blue" domain="[]" context="{'group_by':'bank'}"/>
                        <filter string="Partner" icon="terp-partner" domain="[]" context="{'group_by':'partner_id'}"/>
                        <separator orientation="vertical"/>
                        <filter string="Journal Entries" icon="terp-folder-orange" domain="[]" context="{'group_by':'journal_id'}"/>
                    </group>
               </search>
            </field>
        </record>
        
        <record id="view_res_partner_bank_form" model="ir.ui.view">
            <field name="name">res.partner.bank.account.form</field>
            <field name="model">res.partner.bank</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Bank account">
                    <field name="state"/>
                    <field name="partner_id" select="1"/>
                    <newline/>
                    <field name="acc_number" select="1"/>
                    <newline/>
                    <field name="bank"/>
                    <newline/>
                    <field name="sequence"/>
                    <field colspan="4" name="name"/>
                    <separator colspan="4" string="Account Properties"/>
                    <field name="bank_account_id"/>
                    <field name="trans_account_id"/>
                    <field name="journal_id"/>
                    <field name="transitory_money"/>
                    <field name="virtual_balance"/>
                    <field name="balance"/>
                    <separator colspan="4" string="Bank Account Owner"/>
                    <field colspan="4" name="owner_name"/>
                    <field colspan="4" name="street"/>
                    <field name="city"/>
                    <field name="zip"/>
                    <field completion="1" name="country_id"/>
                    <field name="state_id"/>
                </form>
            </field>
        </record>
        <record id="view_res_partner_bank_tree" model="ir.ui.view">
            <field name="name">res.partner.bank.account.tree</field>
            <field name="model">res.partner.bank</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Bank Accounts">
                    <field name="state"/>
                    <field name="bank"/>
                    <field name="acc_number"/>
                    <field name="partner_id"/>
                    <field name="owner_name"/>
                    <field name="bank_account_id"/>
                    <field name="journal_id"/>
                    <field name="trans_account_id"/>
                    <field name="transitory_money"/>
                    <field name="virtual_balance"/>
                    <field name="balance"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_res_partner_bank">
            <field name="name">Bank Accounts</field>
            <field name="res_model">res.partner.bank</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
	    	<field name="search_view_id" ref="view_res_partner_bank_filter"/>
            <field name="help">With Bank Account you can create and manage Bank Account.</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_wv_partner_bank_tree">
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_res_partner_bank_tree"/> 
            <field name="act_window_id" ref="action_res_partner_bank"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_wv_partner_bank_form">
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_res_partner_bank_form"/>
            <field name="act_window_id" ref="action_res_partner_bank"/>
        </record>

        <menuitem
            id="menu_action_res_partner_bank"
            parent="menu_configuration_bank"
            action="action_res_partner_bank"
            sequence="5"/>

        
    </data>
</openerp>
