<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
    ==================================
   Soporte de Pago
    ==================================
    -->
        <record id="view_voucher_pay_support_form" model="ir.ui.view">
            <field name="name">voucher.pay.support.form</field>
            <field name="model">voucher.pay.support</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Orden de Pago">
                    <group colspan="4" col="6" >
                        <field name="expiry"/>
                        <field name="type" select="2" on_change="onchange_type(type)"/>
                        <field name="partner_id"/> 
                        <field name="payee_id"/> 
                        <field name="company_id"/>
                        <field name="bank_id"/>
                        <field name="accounting_bank_id"/>
                        <field name="amount"/>
                        <field name="date"/>
                        <field name="account_voucher_id"/>
                        <field name="return_voucher_id"/>
                        <field name="account_voucher_transitory_id"/>
                        <newline/> 
                    </group>
                        <group colspan="2" col='6' string="Cheque" >
                            <group colspan="6" col='1'>
                                <field name="check_note_id" attrs="{'readonly':[('type','=','wire'),('state'),'!=','draft'],'domain':[('accounting_bank_id','=', accounting_bank_id)]}"/>
                                <field name="name"/>
<!--                                <field name="cancel_check_note"/>-->
                            </group>
<!--                            <group attrs="{'invisible':[('cancel_check_note','!=','otros')]}" colspan="6" col='1'>                        -->
<!--                                 <field name="notes" string="Motivo de Anulacion"/> -->
<!--                            </group>-->
                            <newline/>
                            <newline/>
                            <newline/>
                            <group colspan="1" col='1'>
                                <button name="get_retirado" states="draft" string="Cheque Retirado" type="object" icon="gtk-execute"/>
                                <button name="get_realizado" states="open" string="Pago Realizado" type="object" icon="gtk-execute"/>
                                <button name="%(wiz_pay_support_cancel)d" type='action' string='Anular Cheque' icon="gtk-cancel" states="open,draft" />
                            </group>
                            <hpaned/>
                        </group>
                    <group colspan="2" col='6' string="Transferencia" >
                        <group colspan="6" col='1'>
                            <field name="wire" attrs="{'readonly':[('type','=','check')]}"/>
<label string=""/><newline/><label string=""/><newline/><label string=""/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/>
                        </group>
                    </group>
                    <newline/>
                    <newline/>
                    <group colspan="1" col='1'>
                        <button name="%(report_account_voucher3)d" string='Ver Comprobate de Pago Resumido' type="action" icon='gtk-print' /> 
                        <button name="%(report_account_voucher_amt3)d" string='Ver Comprobate de Pago Detallado' type="action" icon='gtk-print' /> 
                    </group>
                    <hpaned/>
                    <hpaned/>
                    <group colspan="1" col='1'>
                    <field  name="state" />
                    </group>
                </form>
            </field>
        </record>
        <record id="view_voucher_pay_support_tree" model="ir.ui.view">
            <field name="name">voucher.pay.support.tree</field>
            <field name="model">voucher.pay.support</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Orden de Pago">
                    <field name="type" select="1"/>
                    <field name="partner_id" select="1"/> 
                    <field name="payee_id" select="1"/> 
                    <field name="check_note_id" select="1"/>
                    <field name="accounting_bank_id" select="1"/>      
                    <field name="company_id"/>
                    <field name="bank_id" select="1"/>
                    <field name="amount"/>
                    <field name="date"/>
                    <field  name="state" />
                </tree>
            </field>
        </record>
