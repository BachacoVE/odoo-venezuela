<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
    ==================================
   Soporte de Pago
    ==================================
    -->


        <record id="view_voucher_pay_support_filter" model="ir.ui.view">
            <field name="name">voucher.pay.support.select</field>
            <field name="model">voucher.pay.support</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Voucher Pay Support">
                   <group col="10" colspan="4">
                        <filter name="draft" icon="terp-gtk-media-pause" string="Draft" domain="[('state','=','draft')]" help="Draft voucher pay support"/>
                        <filter name="open" icon="terp-camera_test" string="Open" domain="[('state','=','open')]" help="Open voucher pay support"/>
                        <filter name="cancel" icon="terp-dialog-close" string="Cancel" domain="[('state','=','cancel')]" help="Cancel voucher pay support"/>
                        <filter name="done" icon="terp-check" string="Done" domain="[('state','=','done')]" help="Done voucher pay support"/>                                                
                        <separator orientation="vertical"/>
                        <field name="check_note_id"/>
                        <field name="type"/>
                        <field name="payee_id" />
                        <field name="bank_id"/>
                        <field name="accounting_bank_id"/>
                        <field name="state" />
                        <field name="cancel_check_note"/>
                        <field name="partner_id"/>
                        
                    </group>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Contrapartida" icon="terp-partner" domain="[]" context="{'group_by':'partner_id'}"/>
                        <separator orientation="vertical"/>
                        <filter string="Beneficiary" icon="terp-personal" domain="[]" context="{'group_by':'payee_id'}"/>
                        <filter string="Bank" icon="terp-folder-green" domain="[]" context="{'group_by':'bank_id'}"/>
                        <filter string="Bank Account" icon="terp-folder-orange" domain="[]" context="{'group_by':'accounting_bank_id'}"/>
                        <separator orientation="vertical"/>
                        <filter string="State" icon="terp-stock_effects-object-colorize" domain="[]"  context="{'group_by':'state'}"/>
                    </group>
               </search>
            </field>
        </record>


        <record id="view_voucher_pay_support_form" model="ir.ui.view">
            <field name="name">voucher.pay.support.form</field>
            <field name="model">voucher.pay.support</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Paid Support">
                    <group colspan="4" col="6" >
                        <field name="expiry"/>
                        <field name="type" select="2" on_change="onchange_type(type)"/>
                        <field name="partner_id"/> 
                        <field name="payee_id"/> 
                        <field name="company_id"/>
                        <field name="bank_id"/>
                        <field name="accounting_bank_id"/>
                        <field name="amount"/>
                        <field name="date"/>
                        <field name="account_voucher_id"/>
                        <field name="return_voucher_id"/>
                        <field name="account_voucher_transitory_id"/>
                        <newline/> 
                    </group>
                    <group colspan="2" col='6' string="Check">
                        <group colspan="6" col='1'>
                            <field name="check_note_id" attrs="{'readonly':[('type','=','wire')]}"/>
                            <field name="name"/>
                        </group>
                        <newline/>
                        <newline/>
                        <newline/>
                        <group colspan="1" col='1'>
                            <button name="get_retirado" states="draft" string="Checks Drawn" type="object" icon="gtk-execute"/>
                            <button name="get_realizado" states="open" string="Payment Made" type="object" icon="gtk-execute"/>
                            <button name="%(wiz_pay_support_cancel)d" type='action' string='Cancel Checks' icon="gtk-cancel" states="open,draft"/>
                        </group>
                        <hpaned/>
                    </group>
                    <group colspan="2" col='6' string="Transfer" >
                        <group colspan="6" col='1'>
                            <field name="wire" attrs="{'readonly':[('type','=','check')]}"/>
<label string=""/><newline/><label string=""/><newline/><label string=""/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/><newline/><label string=""/>
                        </group>
                    </group>
                    <newline/>
                    <newline/>
                    <group colspan="1" col='1'>
                        <button name="%(report_account_voucher3)d" string='See Voucher Payment Summary' type="action" icon='gtk-print' /> 
                        <button name="%(report_account_voucher_amt3)d" string='See Voucher Payment' type="action" icon='gtk-print' /> 
                    </group>
                    <hpaned/>
                    <hpaned/>
                    <group colspan="2" col='1'>
                        <field name="state"/>
                    </group>                                        
                </form>
            </field>
        </record>
        <record id="view_voucher_pay_support_tree" model="ir.ui.view">
            <field name="name">voucher.pay.support.tree</field>
            <field name="model">voucher.pay.support</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Paid Support">
                    <field name="type" select="1"/>
                    <field name="partner_id" select="1"/> 
                    <field name="payee_id" select="1"/> 
                    <field name="check_note_id" select="1"/>
                    <field name="accounting_bank_id" select="1"/>      
                    <field name="company_id"/>
                    <field name="bank_id" select="1"/>
                    <field name="amount"/>
                    <field name="date"/>
                    <field  name="state" />
                </tree>
            </field>
        </record>
	<!-- 
	=====================================================
	Menu Principal
	=====================================================
	-->   
    	<record model="ir.actions.act_window" id="action_voucher_pay_support">
	    	<field name="name">Paid Support</field>
	    	<field name="res_model">voucher.pay.support</field>
	    	<field name="type">ir.actions.act_window</field>
	    	<field name="view_type">form</field>
	    	<field name="view_mode">tree,form</field>
	    	<field name="search_view_id" ref="view_voucher_pay_support_filter"/>
            <field name="help">With voucher pay support you can support delivery and check transactions.</field>	    	
    	</record>
    	<record model="ir.actions.act_window.view" id="act_wv_voucher_pay_support_tree">
	    	<field name="sequence" eval="10"/>
	    	<field name="view_mode">tree</field>
	    	<field name="view_id" ref="view_voucher_pay_support_tree"/> 
	    	<field name="act_window_id" ref="action_voucher_pay_support"/>
	    </record>
	    <record model="ir.actions.act_window.view" id="act_wv_voucher_pay_support_form">
	    	<field name="sequence" eval="20"/>
	    	<field name="view_mode">form</field>
	    	<field name="view_id" ref="view_voucher_pay_support_form"/>
	    	<field name="act_window_id" ref="action_voucher_pay_support"/>
	    </record>
        <menuitem 
            action="action_voucher_pay_support" 
            id="menu_voucher_pay_support" 
            parent="id_check_management"/>

<!--        vista utilizada para finalizar el wizard de ordenes de pago-->

        <record id="action_pay_order_wizard_soporte" model="ir.actions.act_window">
            <field name="name">Paid Support</field>
            <field name="res_model">voucher.pay.support</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_voucher_pay_support_form"/>
            <field name="domain">[('state','=','draft')]</field>
            <field name="context">{'state':'draft'}</field>
        </record> 




    </data>
</openerp>
