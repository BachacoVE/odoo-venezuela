<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!--
    ==================================
    Cheques
    ==================================
    -->

        <record id="view_check_note_filter" model="ir.ui.view">
            <field name="name">check.note.select</field>
            <field name="model">check.note</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Check Note">
                    <group col="10" colspan="4">
                        <filter name="request" icon="terp-gtk-media-pause" string="Request" domain="[('state','=','request')]" help="Request check note"/>                    
                        <filter name="draft" icon="terp-document-new" string="Draft" domain="[('state','=','draft')]" help="Draft check note"/>
                        <filter name="review" icon="terp-camera_test" string="Review" domain="[('state','=','review')]" help="Review check note"/>
                        <filter name="cancel" icon="terp-dialog-close" string="Cancel" domain="[('state','=','cancel')]" help="Cancel check note"/>
                        <filter name="active" icon="terp-check" string="Active" domain="[('state','=','active')]" help="Active check note"/>                                                
                        <separator orientation="vertical"/>
                        <field name="date_done"/>
                        <field name="number"/>
                        <field name="accounting_bank_id"/>
                        <field name="bank_id"/>
                        <field name="state"/>
                        <field name="cancel_check_note" widget="selection"/>                     
                        <field name="check_book_id"/>                    
                        <field name="account_voucher_id"/>  
                                                
                    </group>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Check Book" icon="terp-dialog-close" domain="[]" context="{'group_by':'check_book_id'}"/>
                        <filter string="Account Voucher" icon="terp-document-new" domain="[]" context="{'group_by':'account_voucher_id'}"/>
                        <separator orientation="vertical"/>
                        <filter string="Bank" icon="terp-folder-green" domain="[]" context="{'group_by':'bank_id'}"/>
                        <filter string="Bank Account" icon="terp-folder-orange" domain="[]" context="{'group_by':'accounting_bank_id'}"/>
                        <separator orientation="vertical"/>
                        <filter string="Collection Date" icon="terp-go-month" domain="[]" context="{'group_by':'date_done'}"/>
                        <filter string="State" icon="terp-stock_effects-object-colorize" domain="[]"  context="{'group_by':'state'}"/>
                    </group>
               </search>
            </field>
        </record>

    
        <record id="view_check_note_form" model="ir.ui.view">
            <field name="name">check.note.form</field>
            <field name="model">check.note</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Cheques">
                    <notebook colspan="4">
                        <page string="Cheques">
                            <field name="check_book_id"/>
                            <field name="bank_id"/>
                            <field name="accounting_bank_id"/>
                            <field name="number"/>
                            <field name="account_voucher_id"/>
                            <field name="date_done"/>
                        </page>
                        <page string="Otra Informacion">
                            <field name="cancel_check_note"/>
                           <group attrs="{'invisible':[('cancel_check_note','!=','otros')]}" colspan="5" col='6'>                        
                                <field name="notes"/>
                           </group>
                        </page>
                    </notebook>
                   <group colspan="2" col='6'>
                        <hpaned/>
                        <hpaned/>
                        <hpaned/>
                       <field  name="state" />
                        <newline/>
                        <button name="anular" states="active, assigned" string="Cancelar" type="object" icon="gtk-cancel"/>
                  </group>
                </form>
            </field>
        </record>
        <record id="view_check_note_tree" model="ir.ui.view">
            <field name="name">check.note.tree</field>
            <field name="model">check.note</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
            <tree string="Cheques">
                    <field name="check_book_id" select="1" />
                    <field name="bank_id" select="1" />
                    <field name="accounting_bank_id" select="1" />
                    <field name="number" select="1" />
                    <field name="account_voucher_id"/>
                    <field name="date_done" select="1" />
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="action_check_note" model="ir.actions.act_window">
            <field name="name">Cheques</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">check.note</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
	    	<field name="search_view_id" ref="view_check_note_filter"/>
            <field name="help">With Check Book you can create and manage Check Note.</field>            
        </record>
        <menuitem
            action="action_check_note"
            id="menu_check_note"
            parent="id_check_book"/>
    </data>
</openerp>
