<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_cancel_voucher_pay_support_wizard" model="ir.ui.view">
            <field name="name">cancel.voucher.pay.support.form</field>
            <field name="model">cancel.voucher.pay.support</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Cancellation Voucher Payment" >
                      <group colspan="4" col="4">
                            <field name="date"/>
                            <field name="period_id"/>
                            <field name="cancel_check_note"/>
                      </group>
                            <group attrs="{'invisible':[('cancel_check_note','!=','otros')]}" colspan="6" col='1'>
                                 <field name="notes" string="Reason of Cancellation"/> 
                            </group>
                            <newline/>
                            <newline/>
                     <group colspan="2" col="5">
                            <hpaned/> 
                            <button icon="gtk-cancel" special="cancel" string="Abort Cancellation"/>
                            <hpaned/>  
                            <button icon="gtk-ok" name="action_cheque" string="Execute Cancellation" type="object"/>
                            <hpaned/> 
                     </group>
                </form>
            </field>
        </record>

        <record id="wiz_pay_support_cancel" model="ir.actions.act_window">
            <field name="name">Cancel Voucher Payment</field>
            <field name="res_model">cancel.voucher.pay.support</field>
            <field name="src_model">cancel.voucher.pay.support</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_cancel_voucher_pay_support_wizard"/>
            <field name="target">new</field>
        </record>


