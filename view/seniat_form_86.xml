<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
<!--
form_86_config    
-->

        <record model="ir.ui.view" id="view_seniat_form_86_form">
            <field name="name">seniat.form.86.form</field>
            <field name="model">seniat.form.86</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group col="8" colspan="8">
                        <field name="name"/>
                        <field name="ref"/>
                        <field name="broker_id"/>
                        <field name="date"/>
                    </group>
                    <notebook colspan="4">
						<page string="General info">
                            <group col="8" colspan="8">
                                <field name="ref_reg"/>
                                <field name="date_reg"/>
                                <field name="ref_liq"/>
                                <field name="date_liq"/>
                            </group>
                            <field name="custom_id" colspan="4"/>
                            <field name="line_ids" colspan="4" nolabel="1">
                                <tree string="Taxes" editable="bottom">
                                    <field name="tax_code"/>
                                    <field name="amount"/>
                                </tree>
                                <form>
                                    <field name="tax_code"/>
                                    <field name="amount"/>
                                </form>
                            </field>    
                            <field name="amount_total"/>
                        </page>    
						<page string="Other">
                            <label string="Notes" colspan="4"/>
                            <field name="narration" colspan="4" nolabel="1"/>                        
                            <field name="move_id"/>
                            <field name="company_id"/>
                        </page>    
                    </notebook>    
                    <group col="8" colspan="8">
                        <field name="state"/>
                        <button name="button_cancel" icon="gtk-cancel" string="Cancel" states="draft,done" colspan="1"/>
                        <button name="button_done" icon="gtk-go-forward" string="Done" states="draft" colspan="1"/>
                        <button name="button_draft" icon="terp-stock_effects-object-colorize" string="Reset to draft" states="cancel" colspan="1"/>
                    </group>
				</form>
			</field>
		</record>


        <record model="ir.ui.view" id="view_seniat_form_86_tree">
            <field name="name">seniat.form.86.tree</field>
            <field name="model">seniat.form.86</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="red:state in ('draft');gray:state in ('cancel')">
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="broker_id"/>
                    <field name="ref_liq"/>
                    <field name="date_liq"/>
                    <field name="custom_id"/>
                    <field name="amount_total"/>
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>



    </data>
</openerp>
