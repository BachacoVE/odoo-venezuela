<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>


<!-- 
    =====================================================
    Activity
    =====================================================
    -->

        <!-- Added-->
        <record id="act_withold_islr" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">Withholding Islr</field>
            <field name="kind">subflow</field>
            <field name="subflow_id" ref="wh_islr_order"/>
            <field name="action">_create_islr_wh_doc()</field>
        </record>

<!-- 
    =====================================================
    Transitions
    =====================================================
    -->
        <record id="trans_wh_router_wh_islr" model="workflow.transition">
            <field name="act_from" ref="l10n_ve_withholding.act_wh_router"/>
            <field name="act_to" ref="act_withold_islr"/>
            <field name="condition">check_invoice_type() and check_withholdable_concept()</field>
            <field name="signal"></field>
        </record>

        <!--        From Withholdings to paid-->

        <record id="trans_withhold_paid" model="workflow.transition">
            <field name="act_from" ref="l10n_ve_withholding.act_wh_router"/>
            <field name="act_to" ref="account.act_paid"/>
            <field name="trigger_model">account.move.line</field>
            <field name="trigger_expr_id">move_line_id_payment_get()</field>
            <field name="condition">test_paid()</field>
        </record>

        <record id="trans_islr_xml_paid" model="workflow.transition">
            <field name="act_from" ref="act_withold_islr"/>
            <field name="act_to" ref="account.act_paid"/>
            <field name="trigger_model">account.move.line</field>
            <field name="trigger_expr_id">move_line_id_payment_get()</field>
            <field name="condition">test_paid()</field>
        </record>


</data>
</openerp>
