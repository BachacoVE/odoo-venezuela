<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>

        <record id="account_wh_iva_third_party_form" model="ir.ui.view">
            <field name="name">account.wh.iva.third.party.form</field>
            <field name="model">account.wh.iva</field>
            <field name="inherit_id" ref="l10n_ve_withholding_iva.view_wh_iva_form"/>
            <field name="arch" type="xml">
                <xpath xpre="//field[@name='partner_id']" position="after">
                    <field name="third_party_id" domain="[('company_id','=',False),('id','!=','partner_id')]"/>
                </xpath>
            </field>
        </record>

        <record id="account_wh_iva_third_party_form_customer" model="ir.ui.view">
            <field name="name">account.wh.iva.third.party.form.customer</field>
            <field name="model">account.wh.iva</field>
            <field name="inherit_id" ref="l10n_ve_withholding_iva.view_wh_iva_form_customer"/>
            <field name="arch" type="xml">
                <xpath xpre="//field[@name='partner_id']" position="after">
                    <field name="third_party_id" domain="[('company_id','=',False),('id','!=','partner_id')]"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
