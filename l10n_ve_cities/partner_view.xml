<?xml version="1.0" ?>
<openerp>
<data>

    
    <!-- Views for Addresses -->
      <record model="ir.ui.view" id="view_partner_address_form_city">
        <field name='name'>res.partner.address.form.city</field>
        <field name='model'>res.partner.address</field>
        <field name="inherit_id" ref="base.view_partner_address_form1"/>
        <field name='type'>form</field>
        <field name='arch' type='xml'>
            <field name="state_id" position="after">
                <field name="city_id"/>
            </field>
        </field>
    </record>
    
    
    
    <record model="ir.ui.view" id="view_partner_address_tree_city">
        <field name="name">partners_tree_del_city</field>
        <field name="model">res.partner.address</field>
        <field name="inherit_id" ref="base.view_partner_address_tree"/>
        <field name="arch" type="xml">
            <field name="city" position="replace">
            </field>
        </field>
    </record>
    
    <record model="ir.ui.view" id="partners_form_del_city_address1">
        <field name="name">partners_form_del_city1</field>
        <field name="model">res.partner.address</field>
        <field name="inherit_id" ref="base.view_partner_address_form1"/>
        <field name="arch" type="xml">
            <field name="city" position="replace">
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="partners_form_del_city_address2">
        <field name="name">partners_form_del_city2</field>
        <field name="model">res.partner.address</field>
        <field name="inherit_id" ref="base.view_partner_address_form2"/>
        <field name="arch" type="xml">
            <field name="city" position="replace">
            </field>
        </field>
    </record>
    
    <record model="ir.ui.view" id="partners_form_city_partner">
        <field name="name">partners_form_del_city_partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="address" position="replace">
                <field colspan="4" mode="form,tree" name="address" nolabel="1" select="1">
                    <form string="Partner Contacts">
                        <field name="name" select="2"/>
                        <field domain="[('domain', '=', 'contact')]" name="title" string="Type"/>
                        <field name="function"/>
                        <field name="type" select="2"/>
                        <field name="street" select="2"/>
                        <field name="street2"/>
                        <newline/>
                        <field name="zip" select="2"/>
                        <field completion="1" name="country_id" select="2"/>
                        <field name="state_id" select="2"/>
                        <field name="city_id" select="2"/>
                        <newline/>
                        <newline/>
                        <field name="phone"/>
                        <field name="fax"/>
                        <newline/>
                        <field name="mobile"/>
                        <field name="email" select="2" widget="email"/>
                    </form>
                    <tree string="Partner Contacts">
                        <field name="name"/>
                        <field name="zip"/>
                        <field name="country_id"/>
                        <field name="city_id"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </tree>
                </field>                            
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="partners_tree_city_partner">
        <field name="name">partners_tree_del_city</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="city" position="replace"/>
        </field>
    </record>
    
</data>
</openerp>
