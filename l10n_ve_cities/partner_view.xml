<?xml version="1.0" ?>
<openerp>
<data>

    
    <!-- Views for Addresses -->
      <record model="ir.ui.view" id="view_partner_address_form_city">
        <field name='name'>res.partner.address.form.city</field>
        <field name='model'>res.partner.address</field>
        <field name="inherit_id" ref="base.view_partner_address_form1"/>
        <field name='type'>form</field>
        <field name='arch' type='xml'>
            <field name="state_id" position="after">
                <field name="city_id"/>
            </field>
        </field>
    </record>
    
    
    
    <record model="ir.ui.view" id="view_partner_address_tree_city">
        <field name="name">partners_tree_del_city</field>
        <field name="model">res.partner.address</field>
        <field name="inherit_id" ref="base.view_partner_address_tree"/>
        <field name="arch" type="xml">
            <field name="city" position="replace">
            </field>
        </field>
    </record>
    
    <record model="ir.ui.view" id="partners_form_del_city_address1">
        <field name="name">partners_form_del_city1</field>
        <field name="model">res.partner.address</field>
        <field name="inherit_id" ref="base.view_partner_address_form1"/>
        <field name="arch" type="xml">
            <field name="city" position="replace">
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="partners_form_del_city_address2">
        <field name="name">partners_form_del_city2</field>
        <field name="model">res.partner.address</field>
        <field name="inherit_id" ref="base.view_partner_address_form2"/>
        <field name="arch" type="xml">
            <field name="city" position="replace">
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_address_city_form_replace">
        <field name="name">res.partner.address.city.form.replace</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/notebook/page/field[@name='address']/form/field[@name='city']" position="replace">
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_address_city_form">
        <field name="name">res.partner.address.city.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/notebook/page/field[@name='address']/form/field[@name='state_id']" position="after">
                <field name="city_id" select="2"/>
            </xpath>
        </field>
    </record>
    
    <record model="ir.ui.view" id="partners_tree_city_partner">
        <field name="name">partners_tree_del_city</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="city" position="replace"/>
        </field>
    </record>
    
</data>
</openerp>
