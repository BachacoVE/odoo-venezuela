<!-- Partner Address -->

    <record model="ir.ui.view" id="partner_address_form1">
      <field name="name">partner_address_form1</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form" />
      <field name="arch" type="xml">
        <xpath expr="//group[2]" position="replace">
            <group>
                <label for="type" attrs="{'invisible': [('parent_id','=', False)]}" invisible="1"/>
                <div attrs="{'invisible': [('parent_id','=', False)]}" invisible="1" name="div_type">
                    <field class="oe_inline"
                        name="type"/>
                    <label for="use_parent_address" class="oe_edit_only"/>
                    <field name="use_parent_address" class="oe_edit_only oe_inline"
                        on_change="onchange_address(use_parent_address, parent_id)"/>
                </div>

                <separator string="Postal Address" colspan="4" col="4" />
                <div>
                    <field name="type" />
                    <field name="country_id" />
                    <field name="state_id" domain= "[('country_id','=',country_id)]"  attrs= "{'readonly':[('country_id','=',False)]}"/>
                    <field  name="city_id" attrs= "{'readonly':[('state_id','=',False)]}"/>
                    <field  name="municipality_id" attrs= "{'readonly':[('city_id','=',False)]}"/>
                    <field  name="parish_id" attrs= "{'readonly':[('municipality_id','=',False)]}"/>
                    <field  name="sector_id" />
                    <field name="street" />
                    <field name="street2" />
                </div>
                <field name="website" widget="url" placeholder="e.g. www.openerp.com"/>
            </group>
        </xpath>
      </field>
    </record>

  </data>
</openerp>






                        
