<?xml version="1.0"?>
<openerp>
	<data>
	
		<record model="ir.ui.view" id="view_product_product_form_inherit">
			<field name="name">product.product.form.inh.cost</field>
			<field name="model">product.product</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="product.product_normal_form_view"/>
			<field name="arch" type="xml">
				<notebook position="inside">
					<page string="Historical Cost &amp; Price">
					    <separator string="Historical Costs" colspan="2"/>
					    <separator string="Historical Prices" colspan="2"/>
                        <newline/>
					    <field name="cost_historical" colspan="2"/>
					    <field name="list_price_historical"   colspan="2"/>
                        <newline/>
					    <field name="cost_historical_ids"   nolabel="1" colspan="2">
                            <form>
                                <field name="name"/>
                                <field name="price"/>
                            </form>
                            <tree>
                                <field name="name"/>
                                <field name="price"/>
                            </tree>
					    </field>
					    <field name="list_price_historical_ids" nolabel="1" colspan="2">
                            <form>
                                <field name="name"/>
                                <field name="price"/>
                            </form>
                            <tree>
                                <field name="name"/>
                                <field name="price"/>
                            </tree> 
					    </field>
					</page>
				</notebook>
			</field>
		</record>
		
	</data>
</openerp>
