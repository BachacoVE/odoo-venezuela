<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_invoice_partner" model="ir.ui.view">
            <field name="name">Invoice Product by Partner</field>
            <field name="model">invoice.partner</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Select Dates Period">
                    <separator colspan="4" string="This wizard will compute the invoiced product"/>
                    <field name="filter" on_change="onchange_filter(filter)" colspan="4"/>
                    <field name="partner_id" attrs="{'invisible':[('filter', '!=', 'filter_product')], 'required':[('filter', '=', 'filter_product')]}" colspan="4"/>
                    <field name="product_id" attrs="{'invisible':[('filter', '!=', 'filter_partner')], 'required':[('filter', '=', 'filter_partner')]}"  colspan="4"/>
				    <field name="type"/>
				    <newline/>
				    <field name="date_from"/>
				    <field name="date_to"/>                    
                    <separator colspan="4"/>
                    <group colspan="2" col="4">
                        <button special="cancel" string="Cancel"  icon="gtk-cancel"/>
                        <button name="action_update_view" string="Compute" type="object" icon="terp-stock_effects-object-colorize"/>
                        <button name="check_report"  string="Invoice Product Report" type="object" icon="gtk-print"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_invoice_partner" model="ir.actions.act_window">
            <field name="name">Invoice Product by Partner</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invoice.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_invoice_partner"/>
            <field name="target">new</field>
        </record>
        
        <menuitem 
            action="action_invoice_partner" 
            id="menu_invoice_partner" 
            parent="invoice_product_config"/>        
    </data>
</openerp>
