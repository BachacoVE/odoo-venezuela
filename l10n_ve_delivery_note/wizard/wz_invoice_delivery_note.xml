<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_invoice_wizard" model="ir.ui.view">
            <field name="name">view.invoice.wizard</field>
            <field name="model">wz.invoice.delivery.note</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create invoices">
                    <separator colspan="4" string="Create invoices" />
                    <field name="journal_id"/>
                    <newline/>
                    <field name="group"/>
                    <newline/>
                    <field name="type"/>
                     <group colspan="8" col="8">
                            <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                            <button icon="gtk-ok" name="_create_invoice" string="Create Invoice" type="object"/>
                     </group>
                </form>
            </field>
        </record>

        <act_window 
            name="Create Invoice" 
            res_model="wz.invoice.delivery.note" 
            src_model="delivery.note"
            view_mode="form"
            key2="client_action_multi"
            target="new" 
            id="menu_create_invoice" 
        />

    </data>
</openerp>




