<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--  Purchase Invoice Line by products  -->

        <record id="view_purchase_ext_product_tree" model="ir.ui.view">
            <field name="name">report.purchase.ext.product.tree</field>
            <field name="model">report.purchase.ext</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Purchase Invoice by Product" colors="red:price_subtotal&lt;0 and (type=='in_refund')">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="quantity"/>
                    <field name="price_unit"/>
                    <field name="price_subtotal" sum="Price amount"/>
                    <field name="uom_id"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

        

        <record id="view_purchase_ext_product_form" model="ir.ui.view">
            <field name="name">report.purchase.ext.product.form</field>
            <field name="model">report.purchase.ext</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Purchase Invoice by Product">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="quantity"/>
                    <field name="price_unit"/>
                    <field name="price_subtotal"/>
                    <field name="uom_id"/>
                    <field name="type"/>
                </form>
            </field>
        </record>
        


        <record id="action_purchase_ext_product_tree" model="ir.actions.act_window">
            <field name="name">purchase_ext by Product</field>
            <field name="res_model">report.purchase.ext</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="next_id_73" name="Reporting" parent="purchase.menu_purchase_root"/>
        <menuitem id="purchase_ext_reporting" action="action_purchase_ext_product_tree" parent="next_id_73"/>

    </data>
</openerp>
