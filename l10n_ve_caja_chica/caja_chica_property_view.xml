<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Properties -->
        <record id="caj_chic_property_view" model="ir.ui.view">
            <field name="name">caj_chic.property.form</field>
            <field name="model">caj.chic.property</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Properties">
                    <separator colspan="4" string="Propiedad"/>
                    <field name="name" select="1"/>
                    <field name="company_id" select="1"/>                    
                    <field colspan="4" name="value"/>                    
                </form>
            </field>
        </record>
        <record id="caj_chic_property_view_tree" model="ir.ui.view">
            <field name="name">caj_chic.property.tree</field>
            <field name="model">caj.chic.property</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Propiedades">
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        
        
        <record id="caj_chic_property_form_all" model="ir.actions.act_window">
            <field name="name">Propiedades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">caj.chic.property</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="caj_chic_property_view_tree"/>
        </record>
        <menuitem action="caj_chic_property_form_all" id="menu_caj_chic_property_form_all" parent="account.menu_finance_configuration"/>
        
    </data>
</openerp>
