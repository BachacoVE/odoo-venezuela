        <!--
        Sector
        -->

    <record id="view_sector_filter" model="ir.ui.view">
        <field name="name">res.sector.search</field>
        <field name="model">res.sector</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Sectors">
                <group>
                    <separator orientation="horizontal"/>
                    <field name="name"/>
                    <field name="city"/>
                    <field name="parish"/>
                    <field name="zipcode"/>
                </group>
                <newline/>
                <group expand="1" string="Group By.">
                    <filter string="City" context="{'group_by': 'city'}" icon="terp-stock_effects-object-colorize"/>
                    <filter string="Parish" context="{'group_by': 'parish'}" icon="terp-stock_effects-object-colorize"/>
                    <filter string="Zip Code" context="{'group_by': 'zipcode'}" icon="terp-stock_effects-object-colorize"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_sector_tree">
        <field name="name">res.sector.tree</field>
        <field name="model">res.sector</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Sector">
                 <field name="name"/>
                <field name="country"/>
                <field name="state" domain= "[('country_id','=',country)]" attrs= "{'readonly':[('country','=',False)]}"/>
                <field name="municipality" domain= "[('state_id','=',state)]" attrs= "{'readonly':[('state','=',False)]}"/>
                <field name="parish" domain= "[('municipalities_id','=',municipality)]" attrs= "{'readonly':[('municipality','=',False)]}"/>
                <field name="city" domain= "[('state_ids','=',state)]" attrs= "{'readonly':[('parish','=',False)]}"/>
                <field name="zipcode"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_city_form">
        <field name="name">res.sector.form</field>
        <field name="model">res.sector</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Sector">
                <field name="name"/>
                <field name="country"/>
                <field name="state" domain= "[('country_id','=',country)]" attrs= "{'readonly':[('country','=',False)]}"/>
                <field name="municipality" domain= "[('state_id','=',state)]" attrs= "{'readonly':[('state','=',False)]}"/>
                <field name="parish" domain= "[('municipalities_id','=',municipality)]" attrs= "{'readonly':[('municipality','=',False)]}"/>
                <field name="city" domain= "[('state_ids','=',state)]" attrs= "{'readonly':[('parish','=',False)]}"/>
