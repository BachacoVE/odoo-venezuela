<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        #----------------------------------------------
        # Activity
        #----------------------------------------------
        <record id="act_wh_router" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">wh_router</field>
            <field name="kind">dummy</field>
	    <field name="split_mode">OR</field>
        </record>
        #----------------------------------------------
        # Transitions
        #----------------------------------------------
        <record id="trans_open_wh_router" model="workflow.transition">
            <field name="act_from" ref="account.act_open"/>
            <field name="act_to" ref="act_wh_router"/>
            <field name="condition">True</field>
        </record>
        <record id="trans_wh_router_paid" model="workflow.transition">
            <field name="act_from" ref="act_wh_router"/>
            <field name="act_to" ref="account.act_paid"/>
            <field name="trigger_model">account.move.line</field>
            <field name="trigger_expr_id">move_line_id_payment_get()</field>
            <field name="condition">test_paid()</field>
        </record>
    </data>
</openerp>
