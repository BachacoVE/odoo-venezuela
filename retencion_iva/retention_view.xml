<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

	<!-- 
	=====================================================
	Linea de Retencion
	=====================================================
	-->  

        <record id="view_retention_line_tree" model="ir.ui.view">
            <field name="name">account.retention.line.tree</field>
            <field name="model">account.retention.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Lineas de Retencion">
                    <field name="name"/>
                    <field name="invoice_id"/>
                    <field name="retention_rate" />
                    <field name="amount_tax_ret"/>                                
                    <field name="base_ret"/>
                    <field name="move_id"/>
                </tree>
            </field>
        </record>

        <record id="view_retention_line_form" model="ir.ui.view">
            <field name="name">account.retention.line.form</field>
            <field name="model">account.retention.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Lineas de Retencion">
                    <notebook>
                        <page string="Linea">
                            <field name="invoice_id" on_change="invoice_id_change(invoice_id)" domain="[('state', '=', 'open'), ('retention', '=', False), ('partner_id','=',parent.partner_id)]"/>
                            <field name="retention_rate" />
                            <field colspan="4" name="name" select="1"/>
                            <group col="1" colspan="4">
                                <field name="tax_line" nolabel="1">
                                    <tree string="Impuestos">
                                        <field name="name"/>
                                        <field name="base" />
                                        <field name="amount" />
                                        <field name="base_ret" />
                                        <field name="amount_ret" />
                                        <field invisible="True" name="base_amount"/>
                                        <field invisible="True" name="tax_amount"/>
                                    </tree>
                                </field>
                            </group>
                            <field name="move_id"/>
                            <group col="2" colspan="2">
                                <field name="amount_tax_ret"/>                                
                                <field name="base_ret"/>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>


	<!-- 
	=====================================================
	Retention
	=====================================================
	-->  


        <record id="view_retention_tree" model="ir.ui.view">
            <field name="name">account.retention.tree</field>
            <field name="model">account.retention</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="blue:state=='draft'" string="Retention">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="code"/>
                    <field name="number"/>
                    <field name="partner_id"/>
                    <field name="amount_base_ret"/>                                
                    <field name="total_tax_ret"/>
                    <field name="date_ret"/>
                    <field name="currency_id"/>
                    <field name="period_id"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>


        <record id="view_retention_form" model="ir.ui.view">
            <field name="name">account.retention.form</field>
            <field name="model">account.retention</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Retention">
                    <group colspan="4" col="6">
                        <field name="journal_id" select="2"/>
                        <field name="type" select="2"/>
                        <field name="code" select="1"/>
                        <field name="partner_id" on_change="onchange_partner_id(type,partner_id)" select="1"/>
                        <field name="currency_id" />
                        <field name="date_ret" />
                        <field domain="[('type','&lt;&gt;','view'), ('company_id', '=', company_id)]" name="account_id"/>
                        <field name="name" select="2"/>
                        <field name="period_id"/>
                        <field name="number" select="1" attrs="{'readonly':[('type','=','in_invoice')]}"/>
                        <field name="date" />
                    </group>
                    <notebook colspan="4">
                        <page string="Retencion">
                            <field colspan="4" name="retention_line" nolabel="1" widget="one2many_list"/>
                            <group col="4" colspan="2">
                                <field name="state" select="2"/>
                                <button name="retention_done" states="draft" string="Realizar" icon="gtk-execute"/>
                            </group>
                            <group col="2" colspan="2">
                                <field name="amount_base_ret"/>                                
                                <field name="total_tax_ret"/>
                            </group>
                        </page>
                        <page string="Otra Informacion">
                            <field name="company_id"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

    	<record model="ir.actions.act_window" id="action_account_retention">
	    	<field name="name">Retenciones</field>
	    	<field name="res_model">account.retention</field>
	    	<field name="type">ir.actions.act_window</field>
	    	<field name="view_type">form</field>
	    	<field name="view_mode">tree,form</field>
    	</record>
    	<record model="ir.actions.act_window.view" id="act_wv_account_retention_tree">
	    	<field name="sequence" eval="10"/>
	    	<field name="view_mode">tree</field>
	    	<field name="view_id" ref="view_retention_tree"/> 
	    	<field name="act_window_id" ref="action_account_retention"/>
	    </record>
	    <record model="ir.actions.act_window.view" id="act_wv_account_retention_form">
	    	<field name="sequence" eval="20"/>
	    	<field name="view_mode">form</field>
	    	<field name="view_id" ref="view_retention_form"/>
	    	<field name="act_window_id" ref="action_account_retention"/>
	    </record>

	    <menuitem
	    	id="menu_action_account_retention"
	    	name="Retencion" 		
	    	parent="account.menu_finance"
	    	action="action_account_retention"/>



    	<record model="ir.actions.act_window" id="action_account_retention_customer">
	    	<field name="name">Retenciones Clientes</field>
	    	<field name="res_model">account.retention</field>
	    	<field name="type">ir.actions.act_window</field>
	    	<field name="view_type">form</field>
	    	<field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','out_invoice')]</field>
            <field name="context">{'type':'out_invoice'}</field>
    	</record>
    	<record model="ir.actions.act_window.view" id="act_wv_account_retention_customer_tree">
	    	<field name="sequence" eval="10"/>
	    	<field name="view_mode">tree</field>
	    	<field name="view_id" ref="view_retention_tree"/> 
	    	<field name="act_window_id" ref="action_account_retention_customer"/>
	    </record>
	    <record model="ir.actions.act_window.view" id="act_wv_account_retention_customer_form">
	    	<field name="sequence" eval="20"/>
	    	<field name="view_mode">form</field>
	    	<field name="view_id" ref="view_retention_form"/>
	    	<field name="act_window_id" ref="action_account_retention_customer"/>
	    </record>

	    <menuitem
	    	id="menu_action_account_retention_customer"
	    	name="Retencion Clientes" 		
	    	parent="menu_action_account_retention"
	    	action="action_account_retention_customer"/>



    	<record model="ir.actions.act_window" id="action_account_retention_supplier">
	    	<field name="name">Retenciones Proveedores</field>
	    	<field name="res_model">account.retention</field>
	    	<field name="type">ir.actions.act_window</field>
	    	<field name="view_type">form</field>
	    	<field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','in_invoice')]</field>
            <field name="context">{'type':'in_invoice'}</field>
    	</record>
    	<record model="ir.actions.act_window.view" id="act_wv_account_retention_supplier_tree">
	    	<field name="sequence" eval="10"/>
	    	<field name="view_mode">tree</field>
	    	<field name="view_id" ref="view_retention_tree"/> 
	    	<field name="act_window_id" ref="action_account_retention_supplier"/>
	    </record>
	    <record model="ir.actions.act_window.view" id="act_wv_account_retention_supplier_form">
	    	<field name="sequence" eval="20"/>
	    	<field name="view_mode">form</field>
	    	<field name="view_id" ref="view_retention_form"/>
	    	<field name="act_window_id" ref="action_account_retention_supplier"/>
	    </record>

	    <menuitem
	    	id="menu_action_account_retention_supplier"
	    	name="Retencion Proveedores" 		
	    	parent="menu_action_account_retention"
	    	action="action_account_retention_supplier"/>

    </data>
</openerp>
