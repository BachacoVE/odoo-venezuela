<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="partner_ppal" model="res.partner">
            <field name="name">Empresa Modelo</field>
        </record>
        <record id="main_address" model="res.partner.address">
            <field name="partner_id" ref="partner_ppal"/>
            <field name="name">Empresa Modelo</field>
            <field name="street">Av. Francisco de Miranda</field>
            <field name="zip">1020</field>
            <field name="city">Caracas</field>
            <field name="phone">(+58).590.32.45</field>
            <field name="type">default</field>
            <field model="res.country" name="country_id" ref="ve"/>
        </record>
       
        <!-- Currencies -->

       
        <!-- Basic Company  -->
        <record id="compania_ppal" model="res.company">
            <field name="name">Empresa Modelo</field>
            <field name="partner_id" ref="partner_ppal"/>
            <field name="rml_header1">Free Business Solutions</field>
            <field name="rml_footer1">Web: http://tiny.be - Tel: (+32).81.81.37.00 - Bank: CPH 126-2013269-07</field>
            <field name="rml_footer2">IBAN: BE74 1262 0132 6907 - SWIFT: GKCCBEBB - VAT: BE0477.472.701</field>
            <field name="currency_id" ref="VEB"/>
        </record>
        
        <assert id="compania_ppal" model="res.company">
            <test expr="currency_id.code == 'veb'.upper()"/>
            <test expr="name">Empresa Modelo</test>
        </assert>

    </data>
</openerp>
