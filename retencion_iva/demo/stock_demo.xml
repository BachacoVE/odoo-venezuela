<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        
        <!--
	Resource: stock.location
	-->

        <record id="stock.stock_location_suppliers" model="stock.location">
            <field model="account.account" name="account_id" search="[('name','=','Variación Inventario')]"/>
        </record>
        <record id="stock.stock_location_customers" model="stock.location">
            <field model="account.account" name="account_id" search="[('name','=','Variación Inventario')]"/>
        </record>

        <record id="stock_loc_dep" model="stock.location">
            <field name="name">Deposito</field>
            <field name="location_id" ref="stock.stock_location_company"/>
            <field name="usage">internal</field>
            <field model="account.account" name="account_id" search="[('name','=','Inventario')]"/>
        </record>

        <record id="stock_loc_sal" model="stock.location">
            <field name="name">Salida</field>
            <field name="location_id" ref="stock.stock_location_company"/>
            <field name="usage">internal</field>
            <field name="chained_location_type">customer</field>
            <field model="account.account" name="account_id" search="[('name','=','Inventario')]"/>
        </record>


        <!--
	Resource: stock.warehouse
	-->
        <record id="alma_0" model="stock.warehouse">
            <field model="res.company" name="name" search="[]" use="name"/>
            <field name="lot_input_id" ref="stock_loc_dep"/>
            <field name="lot_stock_id" ref="stock_loc_dep"/>
            <field name="lot_output_id" ref="stock_loc_sal"/>
        </record>


        
    </data>
</openerp>
