<?xml version="1.0"?>
<openerp>
    <data>
    
        <record model="ir.ui.view" id="view_fiscal_reports_purchase_form">
            <field name="name">fiscal.reports.purchase.form</field>
            <field name="model">fiscal.reports.purchase</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Detail of entry">
                    <group col="6" colspan="4">
                        <field name="ai_date_invoice"/>
                        <field name="rp_vat"/>
                        <field name="rp_id"/>
                        <field name="ai_nro_ctrl"/>
                        <field name="ai_reference"/>
                        <field name="ai_amount_total"/>
                        <field name="ai_amount_untaxed"/>
                        <field name="ai_amount_tax"/>
                        <field name="ai_type"/>
                        <field name="rp_retention"/>
                        <field name="ai_id"/>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_fiscal_reports_purchase_tree">
            <field name="name">fiscal.reports.purchase.tree</field>
            <field name="model">fiscal.reports.purchase</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="List of Purchases." editable="top/bottom">
                        <field name="ai_date_invoice"/>
                        <field name="rp_vat"/>
                        <field name="rp_id"/>
                        <field name="ai_nro_ctrl"/>
                        <field name="ai_reference"/>
                        <field name="ai_amount_total"/>
                        <field name="ai_amount_untaxed"/>
                        <field name="ai_amount_tax"/>
                        <field name="ai_type"/>
                        <field name="rp_retention"/>
                        <field name="ai_id"/>
                </tree>
            </field>
        </record>
    <record id="action_fiscal_reports_purchase_tree" model="ir.actions.act_window">
    <field name="name">Profit by Product</field>
    <field name="res_model">fiscal.reports.purchase</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="help">This list of elements shown all purchase invoice that will be printed on purchase book report in order to comply with SENIAT requirements in law 0598</field>
    </record>
    <menuitem id="menu_fr_main" name="Fiscal Reporting for SENIAT" parent="l10n_ve_fiscal_requirements.menu_venezuela_reporting"/>
    <menuitem id="menu_fiscal_reports_purchase_tree" name="Purchase Book" parent="l10n_ve_fiscal_reports.menu_fr_main" action="action_fiscal_reports_purchase_tree" groups="account.group_account_manager"/>
    </data>
</openerp>
