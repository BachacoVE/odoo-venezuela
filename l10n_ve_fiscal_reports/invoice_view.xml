<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="inherited_account_invoice_form_fiscal">
            <field name="name">account.invoice.inherit.fiscal</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="date_invoice" position="after">
                        <field name="date_document"/>
                    </field>
                </data>
            </field>
        </record>
        
        <record model="ir.ui.view" id="inherited_account_invoice_form_fiscal2">
            <field name="name">account.invoice.inherit.fiscal2</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/group/group" position="after">
                    <field name="expedient" attrs="{'readonly':[('type','in',['out_invoice','out_refund'])]}"/>
                </xpath>
                <xpath expr='//field[@name="date_due"]' position="after">
                    <field name="date_document"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
