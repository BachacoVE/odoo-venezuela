<?xml version="1.0"?>
<openerp>
    <data>
        
        <record id="view_fiscal_reports_sale_search" model="ir.ui.view">
            <field name="name">fiscal.reports.sale.search</field>
            <field name="model">fiscal.reports.sale</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Book Sale">
                   <group col="10" colspan="4">
                        <field name="rp_id"/>
                        <field name="ai_nro_ctrl"/>
                        <field name="ai_id"/>
                        <field name="rp_vat"/>
                        <field name="ai_reference"/>
                        <newline/>
                        <field name="ai_amount_total"/>
                        <field name="ai_amount_untaxed"/>
                        <field name="ai_date_invoice"/>
                    </group>
                    <newline/>
                    <group expand="1" string="Group By...">
                        <filter string="Empresa" icon="terp-partner" domain="[]" context="{'group_by':'rp_id'}"/>
                        <separator orientation="vertical"/>
                        <filter string="Fecha Factura" icon="terp-stock_effects-object-colorize" domain="[]"  context="{'group_by':'ai_date_invoice'}"/>
                    </group>
               </search>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_fiscal_reports_sale_form">
            <field name="name">fiscal.reports.sale.form</field>
            <field name="model">fiscal.reports.sale</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Detail of entry">
                    <group col="6" colspan="4">
                        <field name="ai_date_document" readonly="1"/>
                        <field name="ai_date_invoice" readonly="1"/>
                        <field name="rp_vat" readonly="1"/>
                        <field name="rp_id" readonly="1"/>
                        <field name="ai_nro_ctrl" readonly="1"/>
                        <field name="ai_reference" readonly="1"/>
                        <field name="ai_amount_total" readonly="1"/>
                        <field name="ai_amount_untaxed" readonly="1"/>
                        <field name="ai_amount_tax" readonly="1"/>
                        <field name="ai_type" readonly="1"/>
                        <field name="rp_retention" readonly="1"/>
                        <field name="ai_id" readonly="1"/>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_fiscal_reports_sale_tree">
            <field name="name">fiscal.reports.sale.tree</field>
            <field name="model">fiscal.reports.sale</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="List of Purchases.">
                        <field name="ai_date_document"/>
                        <field name="ai_date_invoice"/>
                        <field name="rp_vat"/>
                        <field name="rp_id"/>
                        <field name="ai_nro_ctrl"/>
                        <field name="ai_reference"/>
                        <field name="ai_amount_total"/>
                        <field name="ai_amount_untaxed"/>
                        <field name="ai_amount_tax"/>
                        <field name="ai_type"/>
                        <field name="rp_retention"/>
                        <field name="ai_id"/>
                </tree>
            </field>
        </record>
    <record id="action_fiscal_reports_sale_tree" model="ir.actions.act_window">
        <field name="name">Fiscal Report Sales</field>
        <field name="res_model">fiscal.reports.sale</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_fiscal_reports_sale_search"/>
        <field name="help">In this list you will find all invoices in a period, this invoices are the ones that will be printed on Sales Book as SENIAT ask for</field>
    </record>
    <menuitem id="menu_fiscal_reports_sale_tree" name="Sales Book" parent="l10n_ve_fiscal_reports.menu_fr_main" action="action_fiscal_reports_sale_tree" groups="account.group_account_manager"/>
    </data>
</openerp>
