<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="wh_book_wizard_form">
            <field name="name">wh.book.wizard.form</field>
            <field name="model">wh.book.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Print Report Witholding Sales or Purchase">
                <notebook colspan="4">
                    <page string="General">
                        <field name="date_start" />
                        <field name="date_end" />
                        <field name="model" />
                        <button special="cancel" string="Cancel" icon="gtk-cancel" />
                        <button name="check_report" string="Print Report" type="object" icon="gtk-print" />
                    </page>
                </notebook>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="wh_book_wizard_act">
            <field name="name">Report Witholding Sales or Purchase</field>
            <field name="res_model">wh.book.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wh_book_wizard_form"/>
            <field name="target">new</field>
        </record>
        <menuitem name="Print Report Witholding Sales or Purchase" id="wh_book_wizard_menu" 
            parent="menu_fr_main" action="wh_book_wizard_act" />
    </data>
</openerp>
