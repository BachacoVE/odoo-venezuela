<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>



        <!-- 
        =====================================================
        Taxs Extension
        =====================================================
        -->

        <record id="account_tax_applicability" model="ir.ui.view">
            <field name="name">account.tax.applicability</field>
            <field name="model">account.tax</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/group/field[@name='active']" position="after">
                    <field name="appl_type" groups="l10n_ve_withholding_iva.group_account_wh_iva_user,l10n_ve_withholding_iva.group_account_wh_iva_manager"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
