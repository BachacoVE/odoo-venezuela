<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="il_company_invoice_damaged" model="ir.ui.view">
            <field name="name">il_company_invoice_damaged</field>
            <field name="model">res.company</field>
            <field name="priority">24</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr='//page[@string="Configuration"]/group/group[@name="account_grp"]' position="after">
                    <separator string="Data used by default for invoices damaged" colspan="4"/>
                </xpath>
                <xpath expr="//group[@name='account_grp']" position="after">
                    <group name='fr1_grp' string='Damaged Invoices Info'>

                    <field name="jour_id"/>

                    <field name="acc_id"/>
                    <newline/>

                    <field name="acc_id" domain="[('type','in',('other','receivable','payable'))]"/>
                    </group>

                </xpath>
            </field>
        </record>
    </data>
</openerp>

