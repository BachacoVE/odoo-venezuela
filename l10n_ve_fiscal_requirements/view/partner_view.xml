<?xml version="1.0"?>
<openerp>
  <data>

    <record id="view_partner_form2" model="ir.ui.view">
      <field name="name">res.partner.vat.inherit2</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base_vat.view_partner_form"/>
      <field name="arch" type="xml">
        <field name="vat" position="replace">
        </field>
      </field>
    </record>

    <record id="view_partner_form3" model="ir.ui.view">
        <field name="name">res.partner.vat.inherit3</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

          <xpath expr='//field[@name="parent_id"]' position='before'>

          <field name="vat"  placeholder="TIN" colspan="2" attrs="{'required':[('uid_country','=','VE'),'|','&amp;','&amp;',('is_company','=',False),('parent_id','!=',False),('type','=','invoice'), ('parent_id','=',False)] }" />
<!--
              <field name="vat" on_change="vat_change_fiscal_requirements(vat)" colspan="2"/>
-->
           <field name="uid_country" colspan="2" invisible="1"/>
               
          </xpath>

          <xpath expr='//field[@name="street"]' position='replace'>
          <field name="street"  placeholder="Street" colspan="2" attrs="{'required':[('uid_country','=','VE'),'|','&amp;','&amp;',('is_company','=',False),('parent_id','!=',False),('type','=','invoice'), ('parent_id','=',False)] }" />
              
          </xpath>
          
          <xpath expr='//field[@name="city"]' position='replace'>
          <field name="city"  placeholder="City" colspan="2" attrs="{'required':[('uid_country','=','VE'),'|','&amp;','&amp;',('is_company','=',False),('parent_id','!=',False),('type','=','invoice'), ('parent_id','=',False)] }" />
              
          </xpath>
          
          <xpath expr='//field[@name="country_id"]' position='replace'>
          <field name="country_id"  placeholder="Country" class="oe_no_button" options='{"no_open": True}' colspan="2" attrs="{'required':[('uid_country','=','VE'),'|','&amp;','&amp;',('is_company','=',False),('parent_id','!=',False),('type','=','invoice'), ('parent_id','=',False)] }" />
              
          </xpath>


        </field>
    </record>

    <record id="view_partner_form4" model="ir.ui.view">
      <field name="name">res.partner.vat.inherit4</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="replace">
            <field name="seniat_updated" invisible="1" />
            <field name="name" attrs="{'readonly': [('seniat_updated', '!=', False)]}" />
        </xpath>
    </field>
    </record>
  </data>
</openerp>
