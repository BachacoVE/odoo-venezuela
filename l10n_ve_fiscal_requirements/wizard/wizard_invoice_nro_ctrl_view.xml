                />-->

        <record id="wizard_invoice_nro_control" model="ir.actions.act_window">
            <field name="name">Create null paper</field>
            <field name="res_model">wizard.invoice.nro.ctrl</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_wizard_invoice_nro_ctrl"/>
            <field name="target">new</field>
        </record>
        <menuitem name="Declare damaged paper" id="wizard_invoice_nro_ctrl_action" 
            parent="account.menu_finance_receivables" action="wizard_invoice_nro_control"
            sequence="200"
