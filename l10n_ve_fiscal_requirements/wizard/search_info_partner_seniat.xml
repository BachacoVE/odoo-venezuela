<?xml version="1.0"?>
<openerp>
  <data>
        <record model="ir.ui.view" id="view_vat_search">
            <field name="name">search.info.partner.seniat.form</field>
            <field name="model">search.info.partner.seniat</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Asistente de Busqueda del RIF">
                    <field name="name" />
                    <button name="search_partner_seniat" string="Buscar RIF" type="object" icon="terp-check" />
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_vat_return">
            <field name="name">search.info.partner.seniat.form.return</field>
            <field name="model">search.info.partner.seniat</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Asistente de Busqueda del RIF">
                    <group colspan="4">
                    <field name="name" />
                    <button name="search_partner_seniat" string="Buscar RIF" type="object" icon="terp-check" />
                    </group>
                    <separator string="Datos del RIF Consultado" />
                    <field name="vat_name" />
                    <field name="vat_agent" />
                    <field name="percent" />
                    <field name="vat_apply" />
                </form>
            </field>
        </record>
        
        <record id="wizard_vat_return_action" model="ir.actions.act_window">
            <field name="name">Wizard Search VAT</field>
            <field name="res_model">search.info.partner.seniat</field>
            <field name="src_model">search.info.partner.seniat</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vat_return"/>
            <field name="target">new</field>
        </record>
        
        <record id="wizard_vat_search_action" model="ir.actions.act_window">
            <field name="name">Wizard Search VAT</field>
            <field name="res_model">search.info.partner.seniat</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vat_search"/>
            <field name="target">new</field>
        </record>
        
        <menuitem name="Search RIF" id="wizard_vat_search_action_menu" 
            parent="account.menu_finance_receivables" action="wizard_vat_search_action"
            sequence="400"/>
            
        <menuitem name="Search RIF" id="wizard_vat_search_action_pay_menu" 
            parent="account.menu_finance_payables" action="wizard_vat_search_action"
            sequence="400"/>
  </data>
</openerp>
