<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!-- 
    =====================================================
    CONCEPT OF RETENTION, TASAS
    =====================================================
    --> 

        <record id="view_retention_islr_tasa_form" model="ir.ui.view">
            <field name="name">tasas_form</field>
            <field name="model">islr.rates</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Tasas">
                    <field name="name" colspan="4"/>
                    <newline/>
                    <field name="code"/>
                    <field name="base"/>
                    <field name="minimum"/>
                    <field name="residence"/>
                    <field name="wh_perc"/>
                    <field name="nature"/>
                    <field name="subtract"/>

                </form>
            </field>
        </record>

        <record id="view_retention_islr_tasa_tree" model="ir.ui.view">
            <field name="name">tasas_tree</field>
            <field name="model">islr.rates</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Tasas">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="base"/>
                    <field name="minimum"/>
                    <field name="wh_perc"/>
                    <field name="subtract"/>
                    <field name="residence"/>
                    <field name="nature"/>
                </tree>
            </field>
        </record>

        <record id="view_retention_concept_islr_tree" model="ir.ui.view">
            <field name="name">islr.wh.concept_tree</field>
            <field name="model">islr.wh.concept</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Concepto de Retencion de ISLR ">
                    <field name="name"/>
                    <field name="withholdable"/>
                </tree>
            </field>
        </record>

        <record id="view_retention_concept_islr_form" model="ir.ui.view">
            <field name="name">islr.wh.concept_form</field>
            <field name="model">islr.wh.concept</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Concepto de Retencion ISLR FORM">
                    <group colspan="4" col="4">
                        <field name="name"/>
                        <field name="withholdable"/>
                        <field name="property_retencion_islr_payable" attrs="{'readonly':[('withholdable','=',False)],'required':[('withholdable','=',True)]}"/>
                        <field name="property_retencion_islr_receivable" attrs="{'readonly':[('withholdable','=',False)],'required':[('withholdable','=',True)]}"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Tasas" attrs="{'readonly':[('withholdable','=',False)]}">
                            <field name="rate_ids" nolabel="1" />
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_account_retention_concept">
            <field name="name">Concepto de Retencion ISLR</field>
            <field name="res_model">islr.wh.concept</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <record model="ir.actions.act_window.view" id="action_retention_islr_concept_tree_1">
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_retention_concept_islr_tree"/> 
            <field name="act_window_id" ref="action_account_retention_concept"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_retention_islr_concept_form_1">
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_retention_concept_islr_form"/>
            <field name="act_window_id" ref="action_account_retention_concept"/>
        </record>
        
        <menuitem name="Concepto de Retencion ISLR" 
            id="menu_action_concept_retention" 
            parent="menu_wh_action_account_retencion_islr_1"
            action="action_account_retention_concept"/>


    </data>
</openerp>





