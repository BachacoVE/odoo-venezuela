<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- 
    =====================================================
    XML GENERATE
    =====================================================
    -->

        <record id="view_xml_islr_line_form" model="ir.ui.view">
            <field name="name">islr.xml.wh.line_form</field>
            <field name="model">islr.xml.wh.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Datos a Exportar en el XML">
                    <newline/>
                        <separator string="Proveedor a Retener" colspan="6"/>
                    <newline/>
                    <group col="4" colspan="4">
                        <field name="partner_id" colspan="4" on_change="onchange_partner_vat(partner_id)" />
                        <field name="partner_vat"/>
                    </group>
                    <newline/>
                    <separator string="Concepto de Retencion" colspan="6"/>
                    <newline/>
                    <group col="4" colspan="4">
                        <field name="concept_id" colspan="4" />
                        <field name="rate_id" colspan="4" on_change="onchange_code_perc(rate_id)" />
                        <field name="porcent_rete" />
                        <field name="concept_code" />
                    </group>
                    <newline/>
                    <separator string="Factura" colspan="6"/>
                    <newline/>
                    <group col="4" colspan="4">
                        <field name="account_invoice_line_id" colspan="4"/>
                        <field name="period_id" colspan="4"/>
                        <field name="invoice_number" />
                        <field name="control_number" />
                    </group>
                    <newline/>
                    <separator string="Bases" colspan="6"/>
                    <newline/>
                    <group col="4" colspan="4">
                        <field name="base" />
                        <field name="wh" />
                    </group>
                </form>
            </field>
        </record>


        <record id="view_xml_islr_tree" model="ir.ui.view">
            <field name="name">islr.xml.wh.doc_tree</field>
            <field name="model">islr.xml.wh.doc</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Lineas de Retencion para XML" >
                    <field name="company_id"/>
                    <field name="fiscalyear_id"/>
                    <field name="period_id"/>
                </tree>
            </field>
        </record>

        <record id="view_xml_islr_form" model="ir.ui.view">
            <field name="name">islr.xml.wh.doc_form</field>
            <field name="model">islr.xml.wh.doc</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Lineas de Retencion para XML">
                    <field name="company_id"/>
                    <newline/>
                    <group col="4" colspan="2">
                        <field name="fiscalyear_id"  />
                        <field name="period_id" />
                    </group>
                    <notebook colspan="4">
                        <page string="Lineas de Retencion">
                            <field name="xml_ids" nolabel="1"  colspan='4' widget="many2many">
                                <tree string="Detalle del XML">
                                    <field name="partner_vat"/>
                                    <field name="partner_id"/>
                                    <field name="invoice_number"/>
                                    <field name="concept_code"/>
                                    <field name="base"/>
                                    <field name="porcent_rete"/>
                                    <field name="wh"/>
                                </tree>
                            </field>
                            <group col="4" colspan="2">
                                <field name="state" select="2" colspan="4"/>
                                <button name="action_confirm1" string="Confirmar" states="draft" type="object" icon="gtk-go-forward" colspan="4"/>
                                <button name="action_done1" string="Realizar XML" states="confirmed" type="object"  icon="gtk-ok"/>
                                <button name="action_anular1" string="Anular" states="confirmed,done" type="object"  icon="gtk-cancel"/>
                            </group>
                            <group col="2" colspan="2">
                                <field name="amount_total_ret"/>
                                <field name="amount_total_base"/>
                             </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_xml_islr">
            <field name="name">Generar XML</field>
            <field name="res_model">islr.xml.wh.doc</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <record model="ir.actions.act_window.view" id="action_xml_islr_tree_1">
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_xml_islr_tree"/> 
            <field name="act_window_id" ref="action_xml_islr"/>
        </record>
        <record model="ir.actions.act_window.view" id="action_xml_islr_form_1">
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_xml_islr_form"/>
            <field name="act_window_id" ref="action_xml_islr"/>
        </record>
        
        <menuitem name="Generar XML" 
            id="menu_action_xml_islr" 
            parent="menu_wh_action_account_retencion_islr_1"
            action="action_xml_islr"/>

    </data>
</openerp>





