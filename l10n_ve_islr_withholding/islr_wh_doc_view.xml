<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_islr_wh_doc_invoices_form_" model="ir.ui.view">
            <field name="name">islr.wh.doc.invoices_form</field>
            <field name="model">islr.wh.doc.invoices</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Facturas">
                    <field name="invoice_id" domain="[('partner_id','=',parent.partner_id)]"/>
                </form>
            </field>
        </record>

    <!-- 
    =====================================================
    Retention ISLR DOC, DOC LINE  CUSTOMERS
    =====================================================
    -->
        <record id="view_retention_islr_tree_customers" model="ir.ui.view">
            <field name="name">islr.wh.doc_tree_customers</field>
            <field name="model">islr.wh.doc</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="blue:state=='draft'" string="Retencion ISLR Customer">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="code"/>
                    <field name="number"/>
                    <field name="partner_id"/>
                    <field name="date_ret"/>
                    <field name="currency_id"/>
                    <field name="period_id"/>
                    <field name="state"/>
                    <field name="amount_total_ret"/>
                </tree>
            </field>
        </record>
        
        <record id="view_retention_islr_line_tree" model="ir.ui.view">
            <field name="name">islr.wh.doc_line_tree</field>
            <field name="model">islr.wh.doc.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Lineas de Retencion ISLR" editable="bottom" >
                    <field name="name"/>
<!--
                    <field name="invoice_id"/>
-->
                    <field name="concept_id"/>
                    <field name="retencion_islr"/>
                    <field name="amount"/>
                    <field name="move_id"/>
                </tree>
            </field>
        </record>

        <record id="view_retention_islr_line_form" model="ir.ui.view">
            <field name="name">islr.wh.doc.line_form</field>
            <field name="model">islr.wh.doc.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Lineas de Retencion ISLR" editable="bottom">
                    <field name="concept_id"  colspan='6'/>
                    <field name="move_id"  colspan='6'/>
                    <newline/>
                    <field name="xml_ids" nolabel="1"  colspan='4'>
                        <tree string="Detalle del Concepto de Retencion">
                            <field name="rate_id"/>
                            <field name="wh"/>
                            <field name="porcent_rete"/>
                            <field name="base"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>

        <record id="view_retention_islr_form_customers" model="ir.ui.view">
            <field name="name">islr.wh.doc_form_customers</field>
            <field name="model">islr.wh.doc</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Retencion ISLR">
                    <group colspan="4" col="6">
                        <field name="journal_id" select="2" domain="[('type','=','retisrlPurchase')]"/>
                        <field name="type" select="2"/>
                        <field name="code" select="1"/>
                        <field name="partner_id" on_change="onchange_partner_id(type,partner_id)" select="1" domain="[('islr_withholding_agent','=',True), ('customer','=',True)]"/>
                        <field name="currency_id" />
                        <field name="date_ret" />
                        <field domain="[('type','&lt;&gt;','view'), ('company_id', '=', company_id)]" name="account_id"/>
                        <field name="name" select="2"/>
                        <field name="period_id"/>
                        <field name="number"/>
                        <field name="date_uid" />
                        <field name="invoice_id" />
                    </group>
                            <notebook colspan="6">
                                <page string="Concepto de Retencion">
                                    <field colspan="6" name="concept_ids" nolabel="1" widget="one2many_list"/>
                                        <group col="4" colspan="2">
                                            <field name="state" select="2"/>
                                            <field name="amount_total_ret"/>
                                        </group>
                                        <group col="4" colspan="2">
                                            <button name="action_confirm1" string="Confirmar" states="draft" type="object" icon="gtk-go-forward"/>
                                            <button name="action_done1" string="Realizar" states="confirmed" type="object"  icon="gtk-execute"/>
                                            <button name="action_cancel1" string="Cancelar" states="done,confirmed" type="object"  icon="gtk-cancel"/>
                                            <button name="action_cancel_draft" string="Convertir a Borrador" states="cancel" type="object"  icon="gtk-convert"/>
                                         </group>
                                </page>
                                <page string="Facturas">
                                    <field name="invoice_ids" nolabel="1">
                                        <tree string="Facturas a Retener">
                                            <field name="invoice_id"/>
                                        </tree>
                                    </field>
                                </page>
                               <page string="Otra Informacion">
                                    <field name="company_id"/>
                                </page>
                            </notebook>
                </form>
            </field>
        </record>

