            <field name="view_id" ref="view_retention_islr_form_customers"/>
            <field name="act_window_id" ref="action_account_retencion_islr_1"/>
        </record>

        <menuitem
            id="menu_wh_action_account_retencion_islr_1"
            name="Retencion ISLR"
            parent="account.menu_finance"
            action="action_account_retencion_islr_1"/>

