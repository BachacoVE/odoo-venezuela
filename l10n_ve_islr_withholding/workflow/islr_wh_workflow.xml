<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="wh_islr_order" model="workflow">
            <field name="name">Withholding ISLR Order Basic Workflow</field>
            <field name="osv">islr.wh.doc</field>
            <field name="on_create">True</field>
        </record>

        <record id="act_process" model="workflow.activity">
            <field name="wkf_id" ref="wh_islr_order"/>
            <field name="flow_start">True</field>
            <field name="name">process</field>
        </record>

        <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wh_islr_order"/>
            <field name="action">
                write({'state':'draft'})
            </field>
            <field name="kind">function</field>
            <field name="name">draft</field>
        </record>

        <record id="act_confirmed" model="workflow.activity">
            <field name="wkf_id" ref="wh_islr_order"/>
            <field name="action">
                write({'state':'confirmed'})
            </field>
            <field name="kind">function</field>
            <field name="name">confirmed</field>
        </record>

        <record id="act_done" model="workflow.activity">
            <field name="wkf_id" ref="wh_islr_order"/>
            <field name="action">
                write({'state':'done'})
            </field>
            <field name="kind">function</field>
            <field name="name">done</field>
        </record>

        <record id="act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="wh_islr_order"/>
            <field name="action">
                write({'state':'cancel'})
            </field>
            <field name="kind">function</field>
            <field name="name">cancel</field>
        </record>

        <record id="trans_process_draft" model="workflow.transition">
            <field name="act_from" ref="act_process"/>
            <field name="act_to" ref="act_draft"/>
            <field name="signal">wh_islr_draft</field>
        </record>

        <record id="trans_draft_confirmed" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_confirmed"/>
            <field name="signal">wh_islr_confirmed</field>
        </record>

        <record id="trans_confirmed_done" model="workflow.transition">
            <field name="act_from" ref="act_confirmed"/>
            <field name="act_to" ref="act_done"/>
            <field name="signal">wh_islr_done</field>
        </record>

        <record id="trans_done_cancel" model="workflow.transition">
            <field name="act_from" ref="act_done"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">wh_islr_cancel</field>
        </record>

    </data>
</openerp>
