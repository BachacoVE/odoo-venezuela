<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
           <record model="ir.ui.view" id="inherited_account_invoice_form_expedient">
            <field name="name">account.invoice.inherit.expedient</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_invoice']" position="after">
                <field name="import_spreadsheet"/>
                
                </xpath>
                
                <xpath expr="/form/notebook/page[@string='Other Info']" position="after">
                    
               <page string="Importation" attrs="{'invisible':[('import_spreadsheet','=',False)]}">
                     <field name="affected_invoice" attrs="{'readonly':[('type','in',['out_invoice','out_refund'])]}"/>      
                     <field name="import_spreadsheet_name" attrs="{'readonly':[('import_spreadsheet','=',False)],'required':[('import_spreadsheet','=',True)]}" />      
               </page>
                </xpath>
            </field>
        </record>
        
        <record model="ir.ui.view" id="inherited_account_invoice_supplier_form_expedient">
            <field name="name">account.invoice.inherit.expedient2</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_invoice']" position="after">
                <field name="import_spreadsheet"/>
                
                </xpath>
                
                <xpath expr="/form/notebook/page[@string='Other Info']" position="after">
                    
               <page string="Importation" attrs="{'invisible':[('import_spreadsheet','=',False)],}">
                     <field name="affected_invoice" attrs="{'readonly':[('type','in',['out_invoice','out_refund'])],'required':[('import_spreadsheet','=',True)]}"/>      
                     <field name="import_spreadsheet_name" attrs="{'readonly':[('import_spreadsheet','=',False)],'required':[('import_spreadsheet','=',True)]}" />      
               </page>
                </xpath>
            </field>
        </record>
    
    
    </data>
</openerp>
