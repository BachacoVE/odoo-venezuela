<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
<!--
form_86_config    
-->

        <record id="view_form_86_config_form" model="ir.ui.view">
            <field name="name">form.86.config.form</field>
            <field name="model">form.86.config</field>
            <field name="arch" type="xml">
                <form string="Form 86 Config" version='7.0'>
					<header>
<!--
						<field name="state" widget="statusbar" statusbar_visible="draft,open,done" statusbar_colors='{"draft":"blue","open":"green","done":"red"}' />
-->
                    </header>
                     <group col="4" colspan="4">
                    <field name="company_id"/>
                    <field name="journal_id"/>
                    </group>
				</form>
			</field>
		</record>


        <record id="view_form_86_config_tree" model="ir.ui.view">
            <field name="name">form.86.config.tree</field>
            <field name="model">form.86.config</field>
            <field name="arch" type="xml">
                <tree string="Form 86 Config">
                    <field name="company_id"/>
                    <field name="journal_id"/>
                </tree>
            </field>
        </record>


<!--
form_86_customs    
-->

        <record id="view_form_86_customs_form" model="ir.ui.view">
            <field name="name">form.86.customs.form</field>
            <field name="model">form.86.customs</field>
            <field name="arch" type="xml">
                <form string="Customs" version='7.0'>
					<header>
<!--
						<field name="state" widget="statusbar" statusbar_visible="draft,open,done" statusbar_colors='{"draft":"blue","open":"green","done":"red"}' />
-->
                    </header>
                    <group col="4" colspan="4">
                    <field name="code"/>
                    <field name="name"/>
                    </group>
				</form>
			</field>
		</record>


        <record id="view_form_86_customs_tree" model="ir.ui.view">
            <field name="name">form.86.customs.tree</field>
            <field name="model">form.86.customs</field>
            <field name="arch" type="xml">
                <tree string="Customs">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>


<!--
form_86_customs_tax_codes    
-->

        <record id="view_form_86_custom_taxes_form" model="ir.ui.view">
            <field name="name">form.86.custom.taxes.form</field>
            <field name="model">form.86.custom.taxes</field>
            <field name="arch" type="xml">
                <form string="Custom Taxes">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="partner_id"/>
                    <field name="account_id" attrs="{'required':[('vat_detail','=',False)],'readonly':[('vat_detail','=',True)]}"/>
                    <field name="vat_detail"/>
                    <field name="sequence"/>
                    <field name="company_id"/>
				</form>
			</field>
		</record>


        <record id="view_form_86_custom_taxes_tree" model="ir.ui.view">
            <field name="name">form.86.custom.taxes.tree</field>
            <field name="model">form.86.custom.taxes</field>
            <field name="arch" type="xml">
                <tree string="Custom Taxes">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="ref"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
