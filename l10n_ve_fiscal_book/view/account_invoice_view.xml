<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>

        <record id="account_invoice_fiscal_book_form" model="ir.ui.view">
            <field name="name">account.invoice.fiscal.book.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="l10n_ve_fiscal_requirements.account_invoice_ext_view_supp_form_loc_ve"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='sin_cred']" position="attributes">
                        <attribute name="readonly">1</attribute>
                    </xpath>
                    <xpath expr="//field[@name='sin_cred']" position="after">
                        <button name="%(action_change_invoice_sin_cred)d" type="action" string="Change Sin Cred" colspan="6" help="Click this button to change this field."/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
