<?xml version="1.0" ?>
<openerp>
<data>

    
    <!-- Views for Addresses -->
      <record model="ir.ui.view" id="view_partner_address_form_mun">
        <field name='name'>res.partner.address.form.municipalities</field>
        <field name='model'>res.partner.address</field>
        <field name="inherit_id" ref="base.view_partner_address_form1"/>
        <field name='type'>form</field>
        <field name='arch' type='xml'>
            <field name="phone" position="before">
                <field name="municipalities_id"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_address_muni_form">
        <field name="name">res.partner.address.muni.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_ve_cities.res_partner_address_city_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/notebook/page/field[@name='address']/form/field[@name='city_id']" position="after">
                <field name="municipalities_id" select="2"/>
            </xpath>
        </field>
    </record>

    
</data>
</openerp>
