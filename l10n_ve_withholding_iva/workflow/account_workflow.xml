<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>


        #----------------------------------------------
        # Activity
        #----------------------------------------------


        <!-- Added-->
        <record id="act_withold_vat" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">Withholding Vat</field>
            <field name="kind">subflow</field>
            <field name="subflow_id" ref="wh_iva_order"/>
            <field name="action">action_wh_iva_supervisor() and action_wh_iva_create()</field>
        </record>

        
        #----------------------------------------------
        # Transitions
        #----------------------------------------------

<!--        <record id="account.t8" model="workflow.transition">-->
            <!-- Modified -->
            <!--<field name="act_from" ref="act_open"/>-->
<!--            <field name="act_from" ref="account.act_withold_vat"/>-->
<!--        </record>-->
<!--        From WH_ROUTER to Withholdings-->
        <record id="trans_wh_router_wh_vat" model="workflow.transition">
            <field name="act_from" ref="l10n_ve_withholding.act_wh_router"/>
            <field name="act_to" ref="act_withold_vat"/>
            <field name="condition">check_wh_apply() and check_withholdable()</field>
            <field name="signal"></field>
        </record>
<!--        From Withholdings to paid-->

        <record id="trans_withhold_paid" model="workflow.transition">
            <field name="act_from" ref="act_withold_vat"/>
            <field name="act_to" ref="account.act_paid"/>
            <field name="trigger_model">account.move.line</field>
            <field name="trigger_expr_id">move_line_id_payment_get()</field>
            <field name="condition">test_paid()</field>
        </record>
</data>
</openerp>
