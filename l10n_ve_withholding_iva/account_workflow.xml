<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>


        #----------------------------------------------
        # Activity
        #----------------------------------------------


        <!-- Added-->
        <record id="account.act_withold_vat" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">Withholding Vat</field>
            <field name="kind">subflow</field>
            <field name="subflow_id" search="[('osv','=','account.wh.iva')]"/>
            <field name="action">action_wh_iva_create()</field>
        </record>

        
        #----------------------------------------------
        # Transition
        #----------------------------------------------

        <record id="account.t8" model="workflow.transition">
            <!-- Modified -->
            <!--<field name="act_from" ref="act_open"/>-->
            <field name="act_from" ref="account.act_withold_vat"/>
        </record>

        <!-- Added-->
        <record id="account.trans_withhold_done" model="workflow.transition">
            <field name="act_from" ref="account.act_open"/>
            <field name="act_to" ref="account.act_withold_vat"/>
            <field name="signal"></field>
            <field name="condition">wh_iva_id and wh_iva_id.state=='done'</field>
        </record>


</data>
</openerp>
