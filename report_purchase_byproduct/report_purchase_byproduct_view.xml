<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_report_purchase_byproduct_tree">
            <field name="name">report.purchase.byproduct.tree</field>
            <field name="model">report.purchase.byproduct</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Listado de Compras" >
                    <field name="name" select="1"/>
                    <field name="partner_id" select="1"/>
                    <field name="product_id" select="1"/>
                    <field name="type" select="1"/>
                    <field name="invoice_line_price_sub"/>
                    <field name="invoice_line_price_unit"/>
                    <field name="invoice_line_quantity"/>
                    <field name="uos_id"/>
                    <field name="line_discount"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_report_purchase_byproduct_form">
            <field name="name">report.purchase.byproduct.form</field>
            <field name="model">report.purchase.byproduct</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Element Report ">
                    <group col="6" colspan="4">
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="product_id"/>
                        <field name="type"/>
                        <field name="invoice_line_price_sub"/>
                        <field name="invoice_line_price_unit"/>
                        <field name="invoice_line_quantity"/>
                        <field name="uos_id"/>
                        <field name="line_discount"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="action_report_purchase_byproduct_tree" model="ir.actions.act_window">
            <field name="name">Profit by Product</field>
            <field name="res_model">report.purchase.byproduct</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_report_purchase_byproduct" name="Management Reporting" parent="purchase.menu_purchase_root"/>
        <menuitem id="menu_report_purchase_byproduct_tree" name="Management Reporting by Line" parent="report_purchse_byproduct.menu_report_purchase_byproduct" action="action_report_purchase_byproduct_tree"/>
    </data>
</openerp>
