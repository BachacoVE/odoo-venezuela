<?xml version="1.0" encoding="utf-8" ?>
<?xml-stylesheet type="text/css" ?> 
<openerp>
    <data>
        <record id="view_vat_write_off_form" model="ir.ui.view">
            <field name="name">vat.write.off.form</field>
            <field name="model">vat.write.off</field>
            <field name="arch" type="xml">
                <form string="Fiscal Book Lines" version='7.0'>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,done" statusbar_colors='{"draft":"blue","open":"green","done":"red"}' />
                    </header>
                    <separator string="FORMA 30" />
                    <group colspan="4" col="4">
                        <field name='purchase_fb_id' domain="[('state', '=', 'done'),('type', '=', 'purchase'),('period_id', '=', period_id),]" />
                        <field name='sale_fb_id' domain="[('state', '=', 'done'),('type', '=', 'sale'),('period_id', '=', period_id),]" />
                    </group>
                    <group colspan="4" col="4">
                        <field name='period_id' />
                        <field name='company_id' />
                    </group>
                    <group colspan="4" col="4">
                        <field name="start_date" string="Fecha" />
                    </group>
                    <notebook colspan="8">
                        <page string="">
                            <tree>
                                <group colspan="4" col="4">
                                    <label style="background-color:#446600; color:blue; font-size:20pt" string="Débitos Fiscales" />
                                    <label string="Base Imponible" />
                                    <label string="Débito Fiscal" />
                                </group>
                              
                                <table width="680" aling="center" border="2">
                                <tr>
								<td bgcolor="#dedede"><strong>DÉBITOS FISCALES</strong></td>
                                <td bgcolor="#dedede">CRÉDITOS FISCALES</td>
                                <td bstyle="background-color:#446600; color:blue; font-size:20pt">MUNDO</td>
                                <td bgcolor="#dedede">SALUDAME</td>
                                <td bgcolor="#dedede">HOLA!!!!</td>
                                </tr>
                                </table>
                                
                              
                                <group string='Total Débitos Fiscales' col='4'>
                      
								</group>
                            </tree>
                            <!-- </page>
				<page string="Credits Tax">
-->
                            <tree>
                                <group colspan="4" col="4">
                                    <label string="Créditos Fiscales" />
                                    <label string="Base Imponible" />
                                    <label string="Crédito Fiscal" />
                                </group>
                                 <group string='Total Créditos Fiscales' col='4'>
                      
								</group>
                            </tree>
                            <tree>
                                <group colspan="4" col="4">
                                    <label string="Autoliquidación(BsF)" />
                                </group>
                            </tree>
                        </page>
                    </notebook>
                    
                     <group string='Total a Pagar' col='4'>
                      
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="view_vat_write_off_action">
            <field name="name">VAT Write Off</field>
            <field name="res_model">vat.write.off</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem name="VAT Write Off" 
            id="view_vat_write_off_menu" 
            parent="l10n_ve_fiscal_book.menu_fr_main"
            action="view_vat_write_off_action"/>

    </data>
</openerp>

